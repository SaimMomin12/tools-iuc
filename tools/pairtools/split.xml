<tool id="pairtools_split" name="Pairtools split" version="@TOOL_VERSION@+galaxy@SUFFIX_VERSION@" profile="22.05" license="MIT">
    <description>Split a .pairsam file into .pairs and .sam.</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[
        pairtools split
            '$pairsam_path'
            --output-pairs '$output_pairs'
            --output-sam '$output_sam'
            --nproc-in \${GALAXY_SLOTS:-4}
            --nproc-out \${GALAXY_SLOTS:-4}
    ]]></command>
    <inputs>
        <param name="pairsam_path" type="data" format="pairsam" label="Input .pairsam file" help="Input .pairsam file."/>
    </inputs>
    <outputs>
        <data name="output_pairs" format="pairs" label="${tool.name} on ${on_string}: .pairs" lines_diff="10"/>
        <data name="output_sam" format="sam,bam" label="${tool.name} on ${on_string}: .bam" lines_diff="10"/>
    </outputs>
    <tests>
        <!--Test default parameters-->
        <test expect_num_outputs="2">
            <param name="pairsam_path" value="output_dedup_pairs_markdups.pairsam"/>
            <output name="output_pairs" ftype="pairs" file="output_pairs_split.pairs" lines_diff="10"/>
            <output name="output_sam" ftype="bam" file="output_pairs_split.bam" lines_diff="10"/>
        </test>
    </tests>
    <help><![CDATA[
        **Pairtools split**

        Restore a .sam file from sam1 and sam2 fields of a .pairsam file. Create a .pairs file without sam1/sam2 fields.
        
        pairsam_path : input .pairsam file. 
              
    ]]></help>
    <expand macro="citations"/>
    <expand macro="creator"/>
</tool>

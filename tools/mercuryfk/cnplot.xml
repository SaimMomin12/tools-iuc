<tool id="cnplot" name="cnplot" version="@VERSION@+galaxy@VERSION_SUFFIX@" profile="21.05">
    <expand macro="description"/>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[
        CNplot
        @PLOTS@
        @MEASURE@
        @GRAPHS@
        $pdf
        -T \${GALAXY_SLOTS:-4}
        $reads
        $assembly
        output
    ]]></command>
    <inputs>
        <param name="reads" type="data" format="ktab" label="K-mer table"/>
        <param name="assembly" type="data" format="fasta" label="Assembly of genome" help="Must be same genome as the K-mer table was generated from"/>
        <expand macro="plots"/>
        <expand macro="sizes"/>
        <expand macro="graphs"/>
        <expand macro="pdf"/>
    </inputs>
    <outputs>
        <collection name="outputs_png" type="list" label="${tool.name} on ${on_string}: png figures">
            <filter>pdf != "--pdf"</filter>
            <discover_datasets pattern="__name_and_ext__" directory="output" format="png"/>
        </collection>
        <collection name="outputs_pdf" type="list" label="${tool.name} on ${on_string}: pdf figures">
            <filter>pdf</filter>
            <discover_datasets pattern="__name_and_ext__" directory="output" format="pdf"/>
        </collection>
    </outputs>
    <expand macro="citation"/>
    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>